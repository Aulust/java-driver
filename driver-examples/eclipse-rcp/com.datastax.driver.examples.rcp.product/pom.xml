<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.datastax.cassandra</groupId>
        <artifactId>com.datastax.driver.examples.rcp.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../</relativePath>
    </parent>

    <artifactId>com.datastax.driver.examples.rcp.product</artifactId>
    <packaging>eclipse-repository</packaging>
    <name>DataStax Java Driver for Apache Cassandra Examples - Eclipse RCP - Product</name>

    <properties>
        <product.id>${project.artifactId}</product.id>
        <products.dir>${project.build.directory}/products</products.dir>
        <product.dir>${products.dir}/${product.id}</product.dir>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-director-plugin</artifactId>
                <version>${tycho.version}</version>
                <executions>
                    <execution>
                        <id>create-distributions</id>
                        <goals>
                            <goal>materialize-products</goal>
                            <!-- Deactivated - see below -->
                            <!-- <goal>archive-products</goal> -->
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- 
            Not using the goal archive-products above because we need some tweaking before packaging.
            The antrun task below basically does the same thing.
            See:
            http://stackoverflow.com/questions/9361336/how-to-remove-directories-from-final-build-zip-archive-using-maven-3 
            https://github.com/jknack/antlr4ide/blob/master/antlr4ide.product/pom.xml
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>

                                <property name="linux.dir" value="${product.dir}${file.separator}linux" />
                                <property name="linux.gtk.dir" value="${linux.dir}${file.separator}gtk" />
                                <property name="linux.gtk.x86.dir" value="${linux.gtk.dir}${file.separator}x86" />
                                <property name="linux.gtk.x86_64.dir" value="${linux.gtk.dir}${file.separator}x86_64" />
                                <property name="win.dir" value="${product.dir}${file.separator}win32${file.separator}win32" />
                                <property name="win.x86.dir" value="${win.dir}${file.separator}x86" />
                                <property name="win.x86_64.dir" value="${win.dir}${file.separator}x86_64" />
                                <property name="macosx.dir" value="${product.dir}${file.separator}macosx${file.separator}cocoa" />
                                <property name="macosx.x86_64.dir" value="${macosx.dir}${file.separator}x86_64" />

                                <condition property="qualifiedVersion" value="${unqualifiedVersion}" else="${unqualifiedVersion}.${buildQualifier}" >
                                    <equals arg1="${buildQualifier}" arg2="" />
                                </condition>
                                
                                <delete verbose="true">
                                    <!-- 
                                    Remove unwanted console launchers for Windows
                                    -->
                                    <fileset dir="${win.dir}">
                                        <include name="**/eclipsec.exe" />
                                    </fileset>
                                </delete>

                                <!-- Rename app on Mac OS X -->
                                <move verbose="true" file="${macosx.x86_64.dir}/Eclipse.app" tofile="${macosx.x86_64.dir}/DriverExample.app" />
                                
                                <!-- Linux GTK x86 32 -->
                                <tar destfile="${products.dir}${file.separator}DriverExample-${qualifiedVersion}-linux-gtk-x86.tar.gz" compression="gzip" longfile="gnu">
                                    <tarfileset dir="${linux.gtk.x86.dir}" prefix="DriverExample" excludes="DriverExample" />
                                    <tarfileset dir="${linux.gtk.x86.dir}" prefix="DriverExample" includes="DriverExample" filemode="755" />
                                </tar>
                                
                                <!-- Linux GTK x86 64 -->
                                <tar destfile="${products.dir}${file.separator}DriverExample-${qualifiedVersion}-linux-gtk-x86_64.tar.gz" compression="gzip" longfile="gnu">
                                    <tarfileset dir="${linux.gtk.x86_64.dir}" prefix="DriverExample" excludes="DriverExample" />
                                    <tarfileset dir="${linux.gtk.x86_64.dir}" prefix="DriverExample" includes="DriverExample" filemode="755" />
                                </tar>
                            
                                <!-- Windows x86 32 -->
                                <zip destfile="${products.dir}${file.separator}DriverExample-${qualifiedVersion}-win-x86.zip">
                                    <zipfileset dir="${win.x86.dir}" prefix="DriverExample" />
                                </zip>
                                
                                <!-- Windows x86 64 -->
                                <zip destfile="${products.dir}${file.separator}DriverExample-${qualifiedVersion}-win-x86_64.zip">
                                    <zipfileset dir="${win.x86_64.dir}" prefix="DriverExample" />
                                </zip>
                            
                                <!-- Mac OS X x86 64 -->
                                <tar destfile="${products.dir}${file.separator}DriverExample-${qualifiedVersion}-macosx-x86_64.tar.gz" compression="gzip" longfile="gnu">
                                    <tarfileset dir="${macosx.x86_64.dir}" prefix="DriverExample" excludes="DriverExample.app/Contents/MacOS/DriverExample" />
                                    <tarfileset dir="${macosx.x86_64.dir}" prefix="DriverExample" includes="DriverExample.app/Contents/MacOS/DriverExample" filemode="755" />
                                </tar>
                                    
                            </target>
                            <exportAntProperties>true</exportAntProperties>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.10</version>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${products.dir}/DriverExample-${qualifiedVersion}-linux-gtk-x86.tar.gz</file>
                                    <type>tar.gz</type>
                                    <classifier>linux-gtk-x86</classifier>
                                </artifact>
                                <artifact>
                                    <file>${products.dir}/DriverExample-${qualifiedVersion}-linux-gtk-x86_64.tar.gz</file>
                                    <type>tar.gz</type>
                                    <classifier>linux-gtk-x86_64</classifier>
                                </artifact>
                                <artifact>
                                    <file>${products.dir}/DriverExample-${qualifiedVersion}-win-x86.zip</file>
                                    <type>zip</type>
                                    <classifier>win-x86</classifier>
                                </artifact>
                                <artifact>
                                    <file>${products.dir}/DriverExample-${qualifiedVersion}-win-x86_64.zip</file>
                                    <type>zip</type>
                                    <classifier>win-x86_64</classifier>
                                </artifact>
                                <artifact>
                                    <file>${products.dir}/DriverExample-${qualifiedVersion}-macosx-x86_64.tar.gz</file>
                                    <type>tar.gz</type>
                                    <classifier>macosx-x86_64</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
